#!/usr/bin/env bash
#
# Dependencies: pywal, betterlockscreen

# Setting up Wallpaper
wal -q -i "$1"

# Importing the colors
. "$HOME/.cache/wal/colors.sh"

# Setting the background for betterlockscreen
betterlockscreen -u $wallpaper

# Setting the background for Rofi
rm $HOME/.config/rofi/rofi-bg.jpg
ln -s $wallpaper $HOME/.config/rofi/rofi-bg.jpg
