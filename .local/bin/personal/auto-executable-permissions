#!/usr/bin/env bash
#
# Script name: auto-executable-permissions
# Version: 1.0
# Description: A script to set executable permissions to all the necessary scripts.
# Dependencies: chmod
# Github: https://github.com/Ninja-Yubaraj/Dotfiles
# Gitlab: https://gitlab.com/Ninja-Yubaraj/Dotfiles
# License:
# Contributors: Yubaraj Sarkar

# Set with the flags "-e", "-u","-o pipefail" cause the script to fail
# if certain things happen, which is a good thing.  Otherwise, we can
# get hidden bugs that are hard to discover.
set -euo pipefail

# directories
chmod +x $HOME/.local/bin/personal/*
chmod +x $HOME/.local/bin/statusbar/*

# scripts
chmod +x $HOME/.xmonad/xmonad_keys.sh
chmod +x $HOME/.xmonad/pacman-hooks/symlink.sh
chmod +x $HOME/.config/xmobar/trayer-padding-icon.sh
chmod +x $HOME/.local/bin/aftercolorz
chmod +x $HOME/.local/bin/clipit
chmod +x $HOME/.local/bin/cpcolor
chmod +x $HOME/.local/bin/genzathurarc
chmod +x $HOME/.local/bin/lockscreen
chmod +x $HOME/.local/bin/pywal_dmenu_run
chmod +x $HOME/.local/bin/pywal_set_wallpaper
chmod +x $HOME/.local/bin/quickshot
chmod +x $HOME/.local/bin/saveclip
chmod +x $HOME/.local/bin/unix
chmod +x $HOME/.local/bin/wl
chmod +x $HOME/.local/bin/zathura
