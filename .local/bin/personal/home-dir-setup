#!/usr/bin/env bash
#
# Script name: home-dir-setup
# Version: 1.0
# Description: A script to setup the necessary directories in the home directory.
# Dependencies: mkdir
# Github: https://github.com/Ninja-Yubaraj/Dotfiles
# Gitlab: https://gitlab.com/Ninja-Yubaraj/Dotfiles
# License:
# Contributors: Yubaraj Sarkar

# Set with the flags "-e", "-u","-o pipefail" cause the script to fail
# if certain things happen, which is a good thing.  Otherwise, we can
# get hidden bugs that are hard to discover.
set -euo pipefail

# Base-directories
mkdir -p $HOME/Desktop
mkdir -p $HOME/Documents
mkdir -p $HOME/Downloads
mkdir -p $HOME/Music
mkdir -p $HOME/Pictures
mkdir -p $HOME/Public
mkdir -p $HOME/Templates
mkdir -p $HOME/Videos

# Documents Sub-directories
mkdir -p $HOME/Documents/Notes
mkdir -p $HOME/Documents/Projects
mkdir -p $HOME/Documents/Projects/Git
mkdir -p $HOME/Documents/Library

# Music Sub-directories
mkdir -p $HOME/Music/Lofi
mkdir -p $HOME/Music/Nightcore

# Pictures Sub-directories
mkdir -p $HOME/Pictures/Screenshots
